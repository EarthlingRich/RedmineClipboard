{
    "manifest_version": 2,
    "name": "Redmine Clipboard",
    "description": "Copy the number of a Redmine story and task to your clipboard.",
    "version": "1.0",
    "browser_action": {
      "default_icon": "icon.png"
    },
    "permissions": [
      "activeTab"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}