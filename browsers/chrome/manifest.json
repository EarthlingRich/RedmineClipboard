{
    "manifest_version": 2,
    "name": "Redmine Clipboard",
    "description": "Copy the number of a Redmine story and task to your clipboard.",
    "version": "1.0",
    "browser_action": {
      "default_icon": "images/icon-32.png"
    },
    "permissions": [
      "activeTab"
    ],
    "background": {
        "scripts": [
            "js/browser-polyfill.min.js",
            "js/background.js"
        ],
        "persistent": false
    }
}