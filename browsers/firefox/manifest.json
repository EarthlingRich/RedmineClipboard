{
    "manifest_version": 2,
    "name": "Redmine Clipboard",
    "description": "Copy the number of a Redmine story and task to your clipboard.",
    "version": "1.1",
    "icons": {
        "48": "images/icon-48.png"
    },
    "browser_action": {
        "default_icon": {
            "32": "images/icon-32.png"
        }
    },
    "permissions": [
      "activeTab",
      "clipboardWrite"
    ],
    "background": {
        "scripts": ["js/background.js"]
    }
}